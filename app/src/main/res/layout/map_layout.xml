<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >
 
    <fragment
        android:id="@+id/epic_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/item_edit_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="5dp"
        android:scaleType="center"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:clickable="true"
        android:visibility="invisible"
        app:rippleColor="@android:color/transparent"
        app:srcCompat="@drawable/ic_edit" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/item_route_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="55dp"
        android:scaleType="center"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:clickable="true"
        android:visibility="invisible"
        app:rippleColor="@android:color/transparent"
        app:srcCompat="@drawable/ic_route" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/item_synch_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="100dp"
        android:scaleType="center"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:clickable="true"
        android:visibility="invisible"
        app:rippleColor="@android:color/transparent"
        app:srcCompat="@drawable/ic_sync" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/item_delete_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="120dp"
        android:scaleType="center"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:clickable="true"
        android:visibility="invisible"
        app:rippleColor="@android:color/transparent"
        app:srcCompat="@drawable/ic_trash" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/select_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/item_edit_margin"
        android:clickable="true"
        android:onClick="markPosition"
        app:backgroundTint="@color/colorPrimary"
        app:rippleColor="@android:drawable/screen_background_light_transparent"
        app:srcCompat="@drawable/ic_action_point" />


